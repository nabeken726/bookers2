<h1>User info</h1>


<%= image_tag user.get_profile_image(100,100) %>

<table>
  <div>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  </div>

  <div>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  </div>
</table>

<%= link_to "Edit",edit_user_path(@user) %>



<!--新規作成の場所-->



  <h1>New book</h1>
    <%= form_with model:book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
    <% end %>
