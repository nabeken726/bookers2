<!-- Userがログインした時のページ -->
<% if flash[:notice] %>
 <div class="flash">
  <%= flash[:notice] %>
 </div>
<% end %>
<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0 ">
  <div class="row">
  <div class="col-md-3">

<%= render 'list',user:@user,book:@book %>

</div>
<!--Books 右側-->
<div class="col-md-8 offset-md-1">
<h2>Books</h2>


<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
</thead>

  <tbody>
  <% @books.each do |book| %>
    <td><%= link_to image_tag @user.get_profile_image(80,80) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tbody>
  <% end %>
</table>

</div>
</div>
</div>
