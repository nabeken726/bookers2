<!--ここがメインのページです。-->
<!--Book一覧表示-->
<!--User info 左側-->
<% if flash[:notice] %>
 <div class="flash">
  <%= flash[:notice] %>
 </div>
<% end %>
<p id="notice"></p>
<div class="container px-5 px-sm-0 ">
  <div class="row">
  <div class="col-md-3">

<%= render 'users/list',user:@user,book:@book %>

  </div>
    <!--Books 右側-->
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>



  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <% @books.each do |book| %>
    <tbody>
      <td>
        <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
        </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tbody>
  <% end %>
  </table>
    </div>
  </div>
</div>
