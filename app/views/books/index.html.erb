<!--ここがメインのページです。-->



<!--Book一覧表示-->
<!--User info 左側-->
  <h1>仮 indexBook</h1>

<%= render 'users/list',user:@user,book:@book %>

  <!--Books 右側-->
  <h2>Books</h2>

  <% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <td><%= link_to  image_tag book.user.get_profile_image(100,100) %></td>
    <td><%=link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tbody>
</table>
  <% end %>

<%= render 'users/footer' %>