<!--ここは詳細のページです。-->



  <h1>仮 詳細Book</h1>

<%= render 'users/list',user:@user,book:Book.new %>


<h1>Book detail</h1>


<table>
  <tbody>

    <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path(@user) %></td>
    <td><%=link_to @book.title, book_path(@book) %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>

    <td><%= link_to "Edit",edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
    <% end %>
  </tbody>
</table>

<%= render 'users/footer' %>