<!--ここは詳細のページです。-->
<% if flash[:notice] %>
 <div class="flash">
  <%= flash[:notice] %>
 </div>
<% end %>
<p id="notice"></p>
<div class="container px-5 px-sm-0 ">
  <div class="row">
  <div class="col-md-3">

<%= render 'users/list',user:@user,book:Book.new %>

 </div>
<!--Book詳細-->
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

    <table class="table">
      <tbody>
        <td>
          <%= link_to user_path(@book.user.id) do %>
          <%= image_tag @book.user.get_profile_image(80,80) %><br>
          <%= @book.user.name %>
          <% end %>
          </td>
        <td><%=link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>

        <% if @book.user == current_user %>
        <td><%= link_to "Edit",edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger destroy", "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>
</div>
