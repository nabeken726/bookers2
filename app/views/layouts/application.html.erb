<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if user_signed_in? %>
      <!--ログイン済の記述-->
      <ul class="navbar-nav ml-auto">
        <li><i class="fas fa-home text-light"></i><%= link_to "Home", top_path,class:'nav-link text-light' %></li>
        <li><i class="fas fa-users"></i><%= link_to "Users", users_path,class:'nav-link text-light' %></li>
        <li><i class="fas fa-book-open"></i><%= link_to "Books", books_path,class:'nav-link text-light' %></li>
        <li><i class="fas fa-sign-out-alt"></i><%= link_to "Log out", destroy_user_session_path, method: :delete,class:'nav-link text-light' %></li>
        <!--未ログインの場合-->
        <% else %>
        <li><i class="fas fa-home"></i><%= link_to "Home", top_path %></li>
        <li><i class="fas fa-link"></i><%= link_to "About", about_path %></li>
        <li><i class="fas fa-user-plus"></i><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><i class="fas fa-sign-in-alt"></i><%= link_to "Log in", user_session_path %></li>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
  </header>

  <%= render 'layouts/notifications' %>

    <%= yield %>
  <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
  </footer>
</body>

</html>
